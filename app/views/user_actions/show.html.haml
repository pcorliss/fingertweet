= content_for :title, "@#{@user.twitter_user}"
.table-responsive
  %table.table
    %thead
      %tr
        %th{colspan: 3}
          %h3
            = image_tag @user.avatar_uri
            = twitter_linker @user.twitter_user
    - @actions.each do |action|
      %tr
        = render 'action_field', :action => action
