!!!
%html
  %head
    %title
      TweetFinger
      = " - #{yield(:title)}" if yield(:title)
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.min.css"

    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"

    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-static-top
      .navbar-inner
        = link_to 'TweetFinger', '/', class: 'navbar-brand'

    .container
      .row.clearfix
        .col-md-12.column
          = yield
